#include <iostream>
#include <string>
using namespace std;
int main()
{
  int x1;int y1;
  int x2; int y2;
  cin>>x1;
  cin>>y1;
  cin>>x2;
  cin>>y2;
  int b;
  int k = (y2-y1)/(x2-x1);
  b=-k*x1 + y2;
  if (b>0){
    cout<< "y="<< k<< 'x'<< '+'<< b;}
  else if (b==0){
    cout<< "y="<< k<< 'x';}
  else if (b<0){
    cout<< "y="<< k<< 'x'<< -b;}
  }
